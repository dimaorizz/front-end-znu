body
    color white
    height 100em
    width 1200px
    margin 0 auto
    background linear-gradient(#BE008A, #8F2471, #7C005A, #DF38B1, #DF64BD) no-repeat

h1
    margin 20px 0
    text-align center
    font-size 40px
    font-weight bold

h2
    margin 20px 0
    text-align center
    font-size 36px
    font-weight bold

p
    margin-left 10px
    padding 10px
    font-size 20px

a
    text-decoration none
    color #fff
    font-size 1.2em
    &:hover
        color yellow

table
    margin-top 20px
    border 2px solid white

td
    border 1px solid white
    padding 5px

figcaption
    font-size 1.4em
    padding 10px